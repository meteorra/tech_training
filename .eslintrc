{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "strict": 0,
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "object-curly-spacing": [
            2,
            "always"
        ],
        "comma-dangle": [
            2,
            {
                "arrays": "never",
                "objects": "always",
                "imports": "ignore",
                "exports": "ignore",
                "functions": "ignore"
            }
        ]
    },
    "plugins": [
        "react"
    ]
}
