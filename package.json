{
    "name": "tech-training",
    "description": "Training latest technologies",
    "version": "0.0.1",
    "author": "diana baranova",
    "license": "MIT",
    "homepage": "https://github.com/meteorra/tech-training",
    "main": "dist/index.js",
    "jsnext:main": "src/index.js",
    "files": [
        "dist",
        "src"
    ],
    "npmName": "tech-training",
    "npmFileMap": [
        {
            "basePath": "/dist/",
            "files": [
                "*.js"
            ]
        }
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/meteorra/tech-training.git"
    },
    "bugs": {
        "url": "https://github.com/meteorra/tech-training/issues"
    },
    "keywords": [
        "tech-training"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "dev": "webpack-dev-server --progress --colors --config webpack/webpack.config.development.babel.js",
        "lint": "eslint ./src",
        "build": "webpack --config webpack/webpack.config.development.babel.js",
        "serve": "webpack --config webpack/webpack.config.production.babel.js",
        "preversion": "npm run clean && npm run lint",
        "version": "npm run build",
        "postversion": "git push && git push --tags && npm run clean",
        "prepare": "npm run clean && npm run build",
        "start": "npm run build && npm run dev",
        "flow_check": "flow check || exit 0",
        "test": "jest --config jest.config.json",
        "test:watch": "npm test -- --watch"
    },
    "devDependencies": {
        "babel-cli": "^6.24.1",
        "babel-core": "^6.25.0",
        "babel-eslint": "^7.2.3",
        "babel-jest": "^20.0.3",
        "babel-loader": "^7.1.1",
        "babel-preset-env": "^1.6.0",
        "babel-preset-react": "^6.3.13",
        "babel-preset-stage-0": "^6.3.13",
        "babel-register": "^6.24.1",
        "compression-webpack-plugin": "^1.0.0",
        "css-loader": "^0.28.4",
        "cssnano": "^3.10.0",
        "enzyme": "^2.9.1",
        "es5-shim": "^4.3.1",
        "eslint": "^4.3.0",
        "eslint-config-rackt": "^1.1.1",
        "eslint-plugin-react": "^7.1.0",
        "extract-text-webpack-plugin": "3.0.0-rc.2",
        "file-loader": "^0.11.2",
        "html-webpack-plugin": "^2.29.0",
        "jest": "^20.0.4",
        "nock": "^9.0.14",
        "node-sass": "^4.5.3",
        "optimize-css-assets-webpack-plugin": "^2.0.0",
        "react-hot-loader": "^3.0.0-beta.7",
        "react-test-renderer": "^15.6.1",
        "redux-mock-store": "^1.2.3",
        "rimraf": "^2.3.4",
        "sass-loader": "^6.0.6",
        "style-loader": "^0.18.2",
        "webpack": "^3.1.0",
        "webpack-bundle-analyzer": "^2.9.0",
        "webpack-dev-server": "^2.5.1"
    },
    "devEngines": {
        "node": "4.x || 5.x",
        "npm": "2.x || 3.x"
    },
    "dependencies": {
        "auth0-js": "^8.10.1",
        "auth0-lock": "^10.22.0",
        "babel-polyfill": "^6.26.0",
        "firebase": "^4.5.0",
        "history": "^4.7.2",
        "install": "^0.10.1",
        "isomorphic-fetch": "^2.2.1",
        "lodash": "^4.17.4",
        "npm": "^5.5.1",
        "prop-types": "^15.6.0",
        "react": "^15.6.2",
        "react-css-modules": "^4.7.1",
        "react-dom": "^15.6.2",
        "react-redux": "^5.0.6",
        "react-router": "^4.2.0",
        "react-router-dom": "^4.2.2",
        "recompose": "^0.25.1",
        "redux": "^3.7.2",
        "redux-logger": "^3.0.6",
        "redux-thunk": "^2.2.0"
    }
}
